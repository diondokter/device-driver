    register Foo {
        address 0
        fields size-bits=24 {
            /// This is a bool!
            (bool)value0 @0
            (uint)value1 @15:1
            (int)value2 @23:16
        }
    }
    /// This is the Foo register
    register FooRepeated {
        address 3
        repeat count=4 stride=3
